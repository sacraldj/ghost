# GHOST News Engine - API Keys
# Все API ключи для источников новостей
# Скопируйте этот файл в .env и заполните своими ключами

# NewsAPI.org - Основной источник новостей
NEWS_API_KEY=your_newsapi_key_here

# Twitter API v2 - Социальные сети
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# CryptoCompare - Крипто данные
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key_here

# Alpha Vantage - Финансовые данные
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# Reuters - Финансовые новости
REUTERS_API_KEY=your_reuters_key_here

# Bloomberg - Финансовые новости
BLOOMBERG_API_KEY=your_bloomberg_key_here

# CNBC - Финансовые новости
CNBC_API_KEY=your_cnbc_key_here

# TechCrunch - Технологические новости
TECHCRUNCH_API_KEY=your_techcrunch_key_here

# The Verge - Технологические новости
THEVERGE_API_KEY=your_theverge_key_here

# SEC - Регулятивные новости
SEC_API_KEY=your_sec_key_here

# CFTC - Регулятивные новости
CFTC_API_KEY=your_cftc_key_here

# CoinGecko - Крипто данные
COINGECKO_API_KEY=your_coingecko_key_here

# Binance - Рыночные данные
BINANCE_API_KEY=your_binance_key_here
BINANCE_SECRET_KEY=your_binance_secret_here

# Coinbase - Рыночные данные
COINBASE_API_KEY=your_coinbase_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_here

# Reddit - Социальные сети
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=GHOST-News-Engine/1.0

# Telegram - Уведомления
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email - Уведомления
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password_here

# Webhook - Уведомления
WEBHOOK_URL=your_webhook_url_here

# База данных
DATABASE_URL=sqlite:///ghost_news.db

# Логирование
LOG_LEVEL=INFO
LOG_FILE=ghost_news_engine.log

# Настройки производительности
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=10
MAX_RETRIES=3
BATCH_SIZE=50
